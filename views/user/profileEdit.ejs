<% layout('layout') -%>

<header class="about-header">
	<% include ./../partials/cart %>
	<div class="fullscreen-video-wrap banner">
		<img src="../img/Banner Img for abt us.jpg">
		<div class="banner-overlay">
			<h1>Edit Details</h1>
		</div>
	</div>
</div>

	<div class="profile-container">
		<div class="sidebar">
			<h2>My Account</h2>
			<ul>
				<a href="/account"><li>Account Dashboard</li></a>
				<a href="/account/edit"><li>Account Information</li></a>
				<a href="/account/orders"><li>My Orders</li></a>
			</ul>
		</div>
		<div class="info-window">
			<h2>Add New Address</h2>
			<p class="proile-label">Contact Information</p>
			<hr>
			<form>
				<div class="form-section">
					<label for="first-name">First Name</label>
					<input type="text" name="first-name" placeholder="Jon">
				</div>
				<div class="form-section">
					<label for="last-name">Last Name</label>
					<input type="text" name="last-name" placeholder="Snow">
				</div>
				<div class="form-section">
					<label for="phone">Telephone *</label>
					<input type="number" name="phone" placeholder="9560491591">
				</div>
				<button class="profile-save-btn" type="submit">Save Info</button>
			</form>
			<p class="proile-label">Address</p>
			<hr>
			<form>
				<div class="form-section">
					<label for="address">Address *</label>
					<input type="text" name="address" placeholder="Address">
				</div>
				<div class="form-section">
					<label for="city">City</label>
					<input type="text" name="city" placeholder="City">
				</div>
				<div class="form-section">
					<label for="area">Area</label>
					<input type="number" name="area" placeholder="Area">
				</div>
				<div class="form-section">
					<label for="state">State</label>
					<input type="number" name="state" placeholder="State">
				</div>
				<div class="form-section">
					<label for="zip">Zip/Postal Code</label>
					<input type="number" name="zip" placeholder="Zip/Postal Code">
				</div>
				<button class="profile-save-btn" type="submit">Save Address</button>
			</form>

		</div>
	</div>
